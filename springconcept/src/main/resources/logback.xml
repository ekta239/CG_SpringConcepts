<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set Logging Levels -->
    <logger name="com.example.demo" level="TRACE" />

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
